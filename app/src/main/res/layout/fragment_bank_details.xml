<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bankDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lucky_back"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="com.lifeplaytrip.luckycoin.fragment.WalletFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/enter_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="Enter Your Details"
            android:textColor="@color/white_greyish"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_acholder_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_details"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_border"
            android:hint="Person Name*"
            android:inputType="text"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/white_greyish"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_account_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_acholder_name"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_border"
            android:hint="Account No.*"
            android:inputType="number"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/white_greyish"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp" />


        <EditText
            android:id="@+id/edit_ifsc_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_account_no"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_border"
            android:hint="IFSC Code*"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/white_greyish"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edit_pan_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_ifsc_no"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_border"
            android:hint="Pan card No*"
            android:inputType="number"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="@color/white_greyish"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edit_amount_to_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_pan_no"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_border"
            android:hint="Amount*"
            android:inputType="number"
            android:padding="15dp"
            android:textColor="@color/white_greyish"
            android:textColorHint="@color/white_greyish"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button_transfer_money"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_amount_to_transfer"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_background"
            android:text="Transfer"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Note* "
            android:textColor="@color/cb_errorRed" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="The winning amount to the winner will be disbursed after deduction of applicable taxes."
            android:textColor="@color/white_greyish" />
    </LinearLayout>
</LinearLayout>