<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@drawable/button_border">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:orientation="horizontal">

      <TextView
          android:id="@+id/payment_success"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="0.7"
          android:text="Payment Success "
          android:textColor="@color/white_greyish"
          android:textSize="20sp"
          android:textStyle="bold" />

      <ImageView
          android:id="@+id/success_payment_image"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_weight="1.3"
          android:src="@drawable/trophy" />
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cash Remaining :"
            android:textColor="@color/white_greyish"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cash_remaining"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="100"
            android:textColor="@color/white_greyish"
            android:textSize="15sp" />

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/payment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 27 2018"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/payment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="01:00 pm"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />

    </RelativeLayout>

</LinearLayout>