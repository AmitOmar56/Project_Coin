<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/lucky_back"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="2"
    tools:context="com.lifeplaytrip.luckycoin.fragment.ContestFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:background="@drawable/border_background"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/mega_offer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Mega Offer"
            android:textColor="@color/white_greyish"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/offer_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mega_offer"
            android:padding="10dp"
            android:text="Lorem Ipsum is not simply random text. It has roots in a piece of classical Latin literature from 45 BC, making it over 2000 years old."
            android:textColor="@color/white_greyish"
            android:textSize="12sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/offer_star"
            android:text="60"
            android:textColor="@color/white_greyish"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/offer_star"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:src="@drawable/star_new" />

        <Button
            android:id="@+id/buy_offer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/offer_text"
            android:layout_marginTop="73dp"
            android:background="@drawable/loginbutton_selector"
            android:padding="3dp"
            android:text="Buy Offer"
            android:textColor="@color/white_greyish"
            android:textStyle="bold" />

    </RelativeLayout>


</RelativeLayout>