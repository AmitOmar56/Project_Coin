<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_border"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/win_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:text="You Won"
            android:textColor="@color/white_greyish"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/win_status_image"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1.3"
            android:src="@drawable/trophy" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Winning rewards :"
            android:textColor="@color/white_greyish"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/win_points"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10 points"
            android:textColor="@color/white_greyish"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/win_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feb 9 2018"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/win_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="01:00 pm"
            android:textColor="@color/white_greyish"
            android:textSize="14sp" />

    </RelativeLayout>

    <!--<View-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="1px"-->
    <!--android:layout_marginTop="2dp"-->
    <!--android:background="@color/white_greyish" />-->
</LinearLayout>